{
    "name": "Kafka Dev Container",
    "build": {
    "dockerfile": "Dockerfile", // Name of your Dockerfile
    "context": "."
  },
    "forwardPorts": [9092],
    "mounts": [
      "source=${localWorkspaceFolder},target=/workspace,type=bind"
    ],
    "postCreateCommand": "mkdir -p /workspace && chmod -R 777 /workspace",
    "remoteUser": "root",
    "service": "kafka",
    "runArgs": [
      "-p", "9092:9092",
    ],
    "customizations": {
      "vscode": {
        "extensions": [
          "ms-azuretools.vscode-docker"
        ]
      }
    }
  }
  